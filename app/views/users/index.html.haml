%h1 Users
%br

%table.table
  %thead
    %tr
      %th Email
      %th Status
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.approved ? 'Approved' : 'Pending'
        %td.action
          - unless user.approved
            = link_to 'Approve', approve_user_path(user.id)
        %td.action.warning= link_to 'Delete', user_path(user.id), method: :delete
